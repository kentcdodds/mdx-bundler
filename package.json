{
  "name": "mdx-bundler",
  "version": "0.0.0-semantically-released",
  "description": "Compile and bundle your MDX files and their dependencies. FAST.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "mdx",
    "bundler",
    "mdx-bundler",
    "esbuild",
    "xdm"
  ],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com)",
  "license": "MIT",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kentcdodds/mdx-bundler"
  },
  "bugs": {
    "url": "https://github.com/kentcdodds/mdx-bundler/issues"
  },
  "homepage": "https://github.com/kentcdodds/mdx-bundler#readme",
  "files": [
    "dist",
    "client.js",
    "client.d.ts"
  ],
  "scripts": {
    "build": "kcd-scripts build",
    "lint": "kcd-scripts lint",
    "setup": "npm install && npm run validate -s",
    "test": "kcd-scripts test",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "typecheck": "kcd-scripts typecheck",
    "validate": "kcd-scripts validate"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "@esbuild-plugins/node-resolve": "0.0.15",
    "@fal-works/esbuild-plugin-global-externals": "^2.1.1",
    "esbuild": "^0.10.0",
    "gray-matter": "^4.0.2",
    "remark-frontmatter": "^3.0.0",
    "remark-mdx-frontmatter": "^1.0.0",
    "xdm": "^1.6.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "jest-environment-jsdom": "^26.6.2",
    "jest-module-field-resolver": "0.0.1",
    "kcd-scripts": "^8.1.0",
    "left-pad": "^1.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": "./node_modules/kcd-scripts/eslint.js",
    "rules": {
      "@typescript-eslint/no-unsafe-assignment": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "*.d.ts"
  ]
}
