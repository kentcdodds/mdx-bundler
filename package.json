{
  "name": "mdx-bundler",
  "version": "0.0.0-semantically-released",
  "description": "Compile and bundle your MDX files and their dependencies. FAST.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "keywords": [
    "mdx",
    "bundler",
    "mdx-bundler",
    "esbuild",
    "xdm"
  ],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com)",
  "license": "MIT",
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kentcdodds/mdx-bundler"
  },
  "bugs": {
    "url": "https://github.com/kentcdodds/mdx-bundler/issues"
  },
  "homepage": "https://github.com/kentcdodds/mdx-bundler#readme",
  "files": [
    "dist",
    "client"
  ],
  "scripts": {
    "build": "kcd-scripts build",
    "postbuild": "node ./other/cjs-ify.js",
    "lint": "kcd-scripts lint",
    "setup": "npm install && npm run validate -s",
    "test": "uvu -i setup-tests.js src/__tests__",
    "typecheck": "kcd-scripts typecheck",
    "validate": "kcd-scripts validate"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "@esbuild-plugins/node-resolve": "^0.1.4",
    "@fal-works/esbuild-plugin-global-externals": "^2.1.1",
    "esbuild": "^0.11.20",
    "gray-matter": "^4.0.3",
    "jsdom": "^16.5.3",
    "remark-frontmatter": "^3.0.0",
    "remark-mdx-frontmatter": "^1.0.1",
    "uvu": "^0.5.1",
    "xdm": "^1.11.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.6",
    "@types/jsdom": "^16.2.10",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "cross-env": "^7.0.3",
    "kcd-scripts": "^10.0.0",
    "left-pad": "^1.3.0",
    "mdx-test-data": "^1.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark-mdx-images": "^1.0.2",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "extends": "./node_modules/kcd-scripts/eslint.js",
    "rules": {
      "import/extensions": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "max-lines-per-function": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "*.d.ts"
  ]
}
